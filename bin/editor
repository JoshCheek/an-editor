#!/usr/bin/env ruby

$LOAD_PATH.unshift File.expand_path('../lib', __dir__)
require 'editor'
require 'editor/ansi'
require 'io/console'

editor = Editor.new(
  lines:  [],
  x:      0,
  y:      0,
  argv:   ARGV,
  stdin:  $stdin,
  stdout: $stdout,
  ansi:   Editor::ANSI.new,
)

$stdin.raw do
  editor.run
  begin
    editor.process while editor.running?
  ensure
    editor.finish
  end
end
